  <!-- Section for the page header -->
  <section class="single-page-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <!-- Page title and breadcrumb navigation -->
          <h2>Request Aid</h2>
          <ol class="breadcrumb header-bradcrumb justify-content-center">

          </ol>
        </div>
      </div>
    </div>
  </section>

  <!-- Section for editing an existing request -->
  <section class="contact-us" id="contact">
    <div class="container">
      <div class="row justify-content-center">
        <!-- Title for editing request section -->
        <div class="col-xl-6 col-lg-8">
          <div class="title text-center">
            <h2>Edit an Existing Request</h2>
            <div class="border"></div>
            <!-- Form for editing an existing request -->
            <form id="contact-form" action="/saveEdits/<%= Request[0].formId %>" method="post" role="form">
              <div class="form-group mb-4">
                <input type="text" placeholder="Your First Name" class="form-control" name="firstName" id="firstName" value="<%= Request[0].firstName %>" required>
              </div>

              <div class="form-group mb-4">
                <input type="text" placeholder="Your Last Name" class="form-control" name="lastName" id="lastName" value="<%= Request[0].lastName %>" required>
              </div>

              <div class="form-group mb-4">
                <input type="text" placeholder="Your City" class="form-control" name="city" id="city" value="<%= Request[0].city %>"required>
              </div>

              <div class="form-group mb-4">
                <input type="text" placeholder="Your Phone Number" class="form-control" name="phone" id="phone=" value="<%= Request[0].phone %>" required>
              </div>

              <div class="form-group mb-4">
                <label for="aidType">Type of Aid Needed:</label>
                <select id="aidType" name="aidType" required>
                  <option value="water" <% if (Request[0].aidType === "water") { %>selected<% } %>>Water</option>
                  <option value="food" <% if (Request[0].aidType === "food") { %>selected<% } %>>Food</option>
                  <option value="medicalSupplies" <% if (Request[0].aidType === "medicalSupplies") { %>selected<% } %>>Medical Supplies</option>
                  <option value="phoneSims" <% if (Request[0].aidType === "phoneSims") { %>selected<% } %>>Phone SIMs</option>
                  <option value="shelter" <% if (Request[0].aidType === "shelter") { %>selected<% } %>>Shelter</option>
                </select>
              </div>

              <div id="cf-submit">
                <button type="submit" id="contact-submit" class="btn btn-lg btn-outline-danger" style="color: white; border-color: #50050d; background-color: #50050d;">Submit</button>
              </div>
            </form>
            <!-- End of form for editing an existing request -->
          </div>
        </div>
        <!-- End of title for editing request section -->
      </div>
    </div> <!-- end container -->
  </section> <!-- end section -->

  <!-- Footer section -->
  <footer id="footer" class="bg-one">
    <div class="top-footer">
      <div class="container">
        <div class="row justify-content-around">
          <!-- About section -->
          <div class="col-lg-4 col-md-6 mb-5 mb-lg-0">
